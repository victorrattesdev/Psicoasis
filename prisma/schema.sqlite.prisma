// Schema alternativo para SQLite (mais f√°cil para desenvolvimento)
// Para usar, renomeie este arquivo para schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  USER
  ADMIN
}

enum SessionType {
  INDIVIDUAL
  GROUP
  CRISIS
  FOLLOW_UP
}

enum SessionStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum MessageType {
  TEXT
  IMAGE
  AUDIO
  SYSTEM
}

// ============================================
// MODELS
// ============================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      UserRole @default(USER)
  profile   String?  // JSON stored as String in SQLite
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  sessions  Session[]
  messages  Message[]
  posts     Post[]    @relation("UserPosts")
  
  @@map("users")
  @@index([email])
  @@index([role])
}

model Therapist {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  license     String?
  specialties String   @default("[]") // JSON stored as String in SQLite
  bio         String?
  photoUrl    String?
  approved    Boolean  @default(false)
  canPostBlog Boolean  @default(false) @map("canPost")
  profile     String?  // JSON stored as String in SQLite
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  sessions    Session[]
  blogPosts   Post[]    @relation("TherapistPosts")
  
  @@map("therapists")
  @@index([email])
  @@index([approved])
  @@index([canPostBlog])
}

model Session {
  id          String        @id @default(cuid())
  userId      String
  therapistId String?
  type        SessionType
  status      SessionStatus @default(SCHEDULED)
  scheduledAt DateTime?
  duration    Int?          // in minutes
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  // Relations
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  therapist   Therapist?    @relation(fields: [therapistId], references: [id], onDelete: SetNull)
  messages    Message[]
  
  @@map("sessions")
  @@index([userId])
  @@index([therapistId])
  @@index([status])
  @@index([scheduledAt])
}

model Message {
  id        String      @id @default(cuid())
  sessionId String
  userId    String
  content   String
  type      MessageType @default(TEXT)
  createdAt DateTime    @default(now())
  
  // Relations
  session   Session     @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("messages")
  @@index([sessionId])
  @@index([userId])
  @@index([createdAt])
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  posts       Post[]
  
  @@map("blogs")
}

model Post {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  content         String
  excerpt         String?
  coverImage      String?
  published       Boolean  @default(false)
  publishedAt     DateTime?
  metaTitle       String?
  metaDescription String?
  keywords        String?
  category        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  authorUserId      String?
  authorTherapistId String?
  authorUser        User?       @relation("UserPosts", fields: [authorUserId], references: [id], onDelete: SetNull)
  authorTherapist   Therapist?  @relation("TherapistPosts", fields: [authorTherapistId], references: [id], onDelete: SetNull)
  blogId            String
  blog              Blog        @relation(fields: [blogId], references: [id], onDelete: Cascade)
  
  @@map("posts")
  @@index([slug])
  @@index([published])
  @@index([publishedAt])
  @@index([category])
  @@index([authorUserId])
  @@index([authorTherapistId])
  @@index([blogId])
}




